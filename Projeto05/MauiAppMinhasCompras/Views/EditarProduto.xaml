<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.EditarProduto"
             Title="Editar Produto">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Salvar_Clicked" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="10" Spacing="10">
        <Label Text="Categoria:" />
        <Entry x:Name="txt_categoria" Text="{Binding Categoria}" />

        <Label Text="Descrição do Produto:" />
        <Entry Text="{Binding Descricao}" />

        <Label Text="Quantidade:" />
        <Entry Text="{Binding Quantidade}" Keyboard="Numeric" />

        <Label Text="Preço Unitário:" />
        <Entry Text="{Binding Preco}" Keyboard="Numeric" />
    </VerticalStackLayout>
</ContentPage>
